# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_key_here

# MongoDB
MONGO_URL=mongodb+srv://<username>:<password>@cluster0.mongodb.net/chatverse?retryWrites=true&w=majority

# Cloudinary (for profile pictures / media)
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_SECRET_KEY=your_api_secret

# Gmail SMTP (for nodemailer if you're using contact form/email features)
GMAIL_USER=youremail@gmail.com
GMAIL_PASS=your_app_password_here  # (Use App Password, not your Gmail password)

# Google Gemini API (if you're using Gemini AI for Silvi or replies)
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend URL
FRONTEND_URL=http://localhost:5173
